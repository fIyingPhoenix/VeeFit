            </svg>
            <MudText Typo="Typo.h5" Class="ml-3"><b>VeeFit</b></MudText>
        </span>
        <MudSpacer />
        <!-- Center: Navigation links -->
        <MudItem xs="4" Class="d-flex justify-center">
            <MudNavMenu Rounded="true" Color="Color.Primary" Class="pa-2 d-flex justify-center">
                <MudNavLink Href="/" Match="NavLinkMatch.Prefix" Class="nav-link">Home</MudNavLink>
                <MudNavLink Href="/discover" Match="NavLinkMatch.Prefix" Class="nav-link">Discover</MudNavLink>
                <MudNavLink Href="/activity" Match="NavLinkMatch.Prefix" Class="nav-link">Activity</MudNavLink>
                <MudNavLink Href="/profile" Match="NavLinkMatch.Prefix" Class="nav-link">Profile</MudNavLink>
            </MudNavMenu>
        </MudItem>
        <MudSpacer />
        <!--Search Button-->
        <MudIconButton Icon="@Icons.Material.Filled.Search" Size="Size.Medium" />

        <!--User Settings Button -->
        <MudIconButton Icon="@Icons.Material.Filled.Person" OnClick="SettingsPanleToggle" />

    </MudAppBar>
    <!--Content-->
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>

    <!--Settings Panel -->
    <MudDrawer @bind-Open="@OpenSettingsPanel" Width="250px" Height="100%" Anchor="Anchor.End" Elevation="2" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader Class="flex-column align-center">
            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="100px" Width="100px" />
            <MudText Typo="Typo.h6" Class="mt-2">Max Mustermann</MudText>
        </MudDrawerHeader>
        <MudText Typo="Typo.h6" Style="margin-left: 12px; margin-bottom: 10px;">User Settings</MudText>
        <!--User Profill Button-->
        <MudMenuItem Icon="@Icons.Material.Filled.AccountCircle" Style="margin-left: 2px;" IconColor="Color.Primary">User Profile</MudMenuItem>

        <!-- Dark/Light Theme Toggle -->
        <MudStack Row="true" AlignItems="AlignItems.Center" Style="margin-left: 7px;" Spacing="3">
            <MudIcon Style="margin-left: 8px;" Icon="@DarkLightModeButtonIcon" Size="Size.Medium" color="Color.Primary" />
            <MudText Typo="Typo.body1">@DarkLightModeButtonText</MudText>
            <MudSpacer />
            <MudSwitch Color="Color.Primary" @bind-Value=@(_isDarkMode) />
        </MudStack>

        <!-- Theme Color Change-->
        <MudNavGroup Icon="@Icons.Material.Filled.Palette" Title="Color Change" IconColor="Color.Primary" Expanded="false">

            <MudMenuItem OnClick="() => SwitchThemes(0)" Style="justify-content: flex-start;">
                <MudStack Row="true" AlignItems="AlignItems.Center" Style="margin-left: 5px;" Spacing="3">
                    <MudIcon Icon="@Icons.Material.Filled.Square" Style="color: #2196f3;" />
                    <MudText Class="ml-2">VeeFit Blue</MudText>
                    <MudSpacer />
                </MudStack>
            </MudMenuItem>
            <MudMenuItem OnClick="() => SwitchThemes(1)" Style="justify-content: flex-start;">
                <MudStack Row="true" AlignItems="AlignItems.Center" Style="margin-left: 5px;" Spacing="3">
                    <MudIcon Icon="@Icons.Material.Filled.Square" Style="color: #9c27b0;" />
                    <MudText Class="ml-2">Purple Fusion</MudText>
                    <MudSpacer />
                </MudStack>
            </MudMenuItem>
            <MudMenuItem OnClick="() => SwitchThemes(2)" Style="justify-content: flex-start;">
                <MudStack Row="true" AlignItems="AlignItems.Center" Style="margin-left: 5px;" Spacing="3">
                    <MudIcon Icon="@Icons.Material.Filled.Square" Style="color: coral;" />
                    <MudText Class="ml-2">Coral Energy</MudText>
                    <MudSpacer />
                </MudStack>
            </MudMenuItem>
            <MudMenuItem OnClick="() => SwitchThemes(3)" Style="justify-content: flex-start;">
                <MudStack Row="true" AlignItems="AlignItems.Center" Style="margin-left: 5px;" Spacing="3">
                    <MudIcon Icon="@Icons.Material.Filled.Square" Style="color: limegreen;" />
                    <MudText Class="ml-2">Green Vitality</MudText>
                    <MudSpacer />
                </MudStack>
            </MudMenuItem>
        </MudNavGroup>

        <!-- Diary Button-->
        <MudMenuItem Icon="@Icons.Material.Filled.Book" Style="margin-left: 2px;" IconColor="Color.Primary">Diary</MudMenuItem>
        <!-- Training Plan Button-->
        <MudMenuItem Icon="@Icons.Material.Filled.FitnessCenter" Style="margin-left: 2px;" IconColor="Color.Primary">Training Plan</MudMenuItem>
        <!-- Training Plan Button-->
        <MudMenuItem Icon="@Icons.Material.Filled.ExitToApp" Style="margin-left: 2px;" IconColor="Color.Primary">Sign Out</MudMenuItem>

    </MudDrawer>
</MudLayout>



<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool OpenSettingsPanel { get; set; } = false;
    private bool _isDarkMode = false;
    private MudTheme? _theme = null;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        SwitchThemes(0);
    }
    //Switching between themes!
    private void SwitchThemes(int Color)
    {
        _theme = new()
            {
                PaletteLight = Core.Extensions.GUI.Themes.LightTheme(Color),
                PaletteDark = Core.Extensions.GUI.Themes.DarkTheme(Color),
                LayoutProperties = new LayoutProperties()
            };
    }
    private string GetThemeText()
    {
        return !_isDarkMode ? "Dark Mode" : "Light Mode";
    }
    private void DarkModeToggle()
    {
        _isDarkMode = !_isDarkMode;
    }
    private void SettingsPanleToggle()
    {
        OpenSettingsPanel = !OpenSettingsPanel;
    }
    public string DarkLightModeButtonIcon => _isDarkMode switch
    {
        false => Icons.Material.Rounded.LightMode,
        true => Icons.Material.Outlined.DarkMode,
    };
    public string DarkLightModeButtonText => _isDarkMode switch
    {
        false => "Light Mode",
        true => "Dark Mode",
    };
}


